<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools. -->
<hibernate-configuration>

	<session-factory>
		<property name="hbm2ddl.auto">update</property>
		<property name="myeclipse.connection.profile">Studies</property>
		<property name="dialect">
			org.hibernate.dialect.MySQLDialect
		</property>
		<property name="show_sql">true</property> 
		<!-- <property name="connection.password">Zx..00..</property> <property 
			name="connection.username">root</property> <property name="connection.url"> 
			jdbc:mysql://localhost:3306/shop </property> <property name="connection.driver_class"> 
			com.mysql.jdbc.Driver </property> -->

		<!-- 开启二级缓存 -->
		 <property name="cache.use_second_level_cache">true</property> 
		<!-- 开启查询缓存 : 如果不设置“查询缓存”，那么hibernate只会缓存使用load()方法获得的单个持久化对象，如果想缓存使用 findall()、list()、Iterator()、createCriteria()、createQuery()等方法获得的数据结果集的话， 
			就需要在配置文件中设置 hibernate.cache.use_query_cache true 才行 -->
		<property name="hibernate.cache.use_query_cache">true</property>
		<property name="cache.region.factory_class">
			org.hibernate.cache.EhCacheRegionFactory
		</property>
		<property
			name="hibernate.cache.provider_configuration_file_resource_path">
			/ehcache.xml
		</property> 

		<mapping resource="cn/hhit/eshop/model/Category.hbm.xml" />
		<mapping resource="cn/hhit/eshop/model/Account.hbm.xml" />
		<mapping resource="cn/hhit/eshop/model/Product.hbm.xml" />
		<mapping class="cn.hhit.eshop.model.Forder" />
		<mapping class="cn.hhit.eshop.model.Sorder" />
		<mapping class="cn.hhit.eshop.model.Status" />
		<mapping class="cn.hhit.eshop.model.User" />
		<mapping class="cn.hhit.eshop.model.PersistentLogins" />


		<!-- <class-cache usage="read-write" class="cn.hhit.eshop.model.Product" />  -->
	</session-factory>

</hibernate-configuration>